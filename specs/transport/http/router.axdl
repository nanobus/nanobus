namespace "nanobus.transport.http"

alias Handler = string

type RouterV1Config @router("nanobus.transport.http.router/v1") {
  routes: [AddRoute]
}

type AddRoute {
  method: string
  uri: string
  encoding: string?
  raw: bool?
  handler: Handler
}
